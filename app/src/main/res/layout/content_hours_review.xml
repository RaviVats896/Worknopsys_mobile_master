<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ravivats.worknopsysmobile.Others.HoursReviewActivity"
    tools:showIn="@layout/app_bar_hours_review">

    <TextView
        android:id="@+id/hours_review_customer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Customer :" />

    <Spinner
        android:id="@+id/hours_review_customer_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/hours_review_project_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hours_review_customer_label"
        android:layout_marginTop="25dp"
        android:text="Project :" />

    <Spinner
        android:id="@+id/hours_review_project_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/hours_review_customer_label"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/hours_review_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hours_review_project_label"
        android:layout_marginTop="25dp"
        android:text="Date :" />

    <EditText
        android:id="@+id/hours_review_date_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/hours_review_project_label"
        android:layout_marginTop="17dp"
        android:hint="Choose Date"
        android:inputType="date" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hours_review_date_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/hours_review_next_button"
        android:text="@string/next" />

</RelativeLayout>
