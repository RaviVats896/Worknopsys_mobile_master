<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ravivats.worknopsysmobile.WorkingOrders.CreateWorkingOrder">

    <EditText
        android:id="@+id/create_wo_editText_sDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:hint="Start Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/create_wo_editText_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_wo_editText_sDate"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:hint="Address"
        android:inputType="text"/>

    <TextView
        android:id="@+id/create_wo_spinner_pID_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_wo_editText_address"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Project Name" />

    <Spinner
        android:id="@+id/create_wo_spinner_pID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/create_wo_editText_address"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/create_wo_spinner_tID_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_wo_spinner_pID"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Task Name" />

    <Spinner
        android:id="@+id/create_wo_spinner_tID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/create_wo_spinner_pID"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:dropDownWidth="wrap_content" />

    <TextView
        android:id="@+id/create_wo_spinner_cID_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_wo_spinner_tID"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Customer Name" />

    <Spinner
        android:id="@+id/create_wo_spinner_cID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/create_wo_spinner_tID"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/create_wo_editText_resources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_wo_spinner_cID"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:hint="Resources" />

    <Button
        android:id="@+id/create_wo_final_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_wo_editText_resources"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create Working Order" />

</RelativeLayout>