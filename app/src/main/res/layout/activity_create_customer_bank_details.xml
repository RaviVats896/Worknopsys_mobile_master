<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_customer_bank_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ravivats.worknopsysmobile.Customer.CreateCustomerBankDetails">

    <TextView
        android:id="@+id/cp_customers_bank_postbox_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_website_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:text="Postbox :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cp_customers_bank_street_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_postbox_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="Name" />

    <EditText
        android:id="@+id/cp_customers_bank_street_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_postbox_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="Name"
        android:inputType="text"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cp_customers_bank_city_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_street_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="City" />

    <EditText
        android:id="@+id/cp_customers_bank_city_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_street_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="City"
        android:inputType="text"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cp_customers_bank_zip_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_city_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="Zip" />

    <EditText
        android:id="@+id/cp_customers_bank_zip_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_city_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="Zip"
        android:inputType="number"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/cp_customers_bank_details_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_zip_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="Bank Details :"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cp_customers_bank_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_details_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="Bank Name" />

    <EditText
        android:id="@+id/cp_customers_bank_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_details_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="Bank Name"
        android:inputType="text"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cp_customers_bank_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_name_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="Bank Code" />

    <EditText
        android:id="@+id/cp_customers_bank_code_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_name_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="Bank Code"
        android:inputType="number"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cp_customers_bank_account_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_code_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="Bank Account" />

    <EditText
        android:id="@+id/cp_customers_bank_account_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_code_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="Bank Account"
        android:inputType="number"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cp_customers_bank_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_account_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="Bank User" />

    <EditText
        android:id="@+id/cp_customers_bank_user_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_account_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="Bank User"
        android:inputType="text"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cp_customers_bank_iban_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_user_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="IBAN" />

    <EditText
        android:id="@+id/cp_customers_bank_iban_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_user_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="IBAN"
        android:inputType="number"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cp_customers_bank_bic_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_iban_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="BIC" />

    <EditText
        android:id="@+id/cp_customers_bank_bic_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_iban_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="BIC"
        android:inputType="number"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cp_customers_bank_currency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_bic_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="Currency" />

    <EditText
        android:id="@+id/cp_customers_bank_currency_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_bic_label"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:hint="Currency"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp" />

    <Button
        android:id="@+id/cp_customers_bank_nxt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_customers_bank_currency_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/create_customer" />
</RelativeLayout>
