<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ravivats.worknopsysmobile.Others.LoginActivity">

    <EditText
        android:id="@+id/loginPersonalNoEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/loginPersonal_numberHint"
        android:inputType="number"
        android:textColorHint="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/loginPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginPersonalNoEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/loginPasswordHint"
        android:inputType="textPassword"
        android:textColorHint="@color/colorAccent" />

    <Switch
        android:id="@+id/loginLocationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginPasswordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="11"
        android:switchPadding="30dp"
        android:text="Enable Location"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/loginLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginLocationSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/loginLoginBtnText" />
</RelativeLayout>
