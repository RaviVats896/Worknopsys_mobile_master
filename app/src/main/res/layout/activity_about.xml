<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ravivats.worknopsysmobile.Others.AboutActivity">

        <TextView
            android:id="@+id/about_cgmDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="cgmdate"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_cgmDate_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="dd/mm/yyyy"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/about_gcmId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_cgmDate"
            android:layout_marginTop="5dp"
            android:text="GCM ID"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_gcmId_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_cgmDate"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="GCM ID"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_gcmId"
            android:layout_marginTop="5dp"
            android:text="Version"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_version_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_gcmId"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="0.0.0"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/about_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_version"
            android:layout_marginTop="5dp"
            android:text="Client"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_client_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_version"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="Client number"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic" />

        <Button
            android:id="@+id/about_auth_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_client"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_menu_manage"
            android:text="Authorization" />

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/about_auth_expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/about_auth_button"
            android:background="@color/colorWhite"
            android:padding="0dp"
            app:ael_duration="400"
            app:ael_expanded="false"
            app:ael_orientation="vertical">

            <Switch
                android:id="@+id/about_adm_emp_cust_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="adm_emp_cust_create"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_emp_cust_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_emp_cust_create"
                android:clickable="false"
                android:text="adm_emp_cust_view"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_emp_proj_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_emp_cust_view"
                android:clickable="false"
                android:text="adm_emp_proj_create"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_emp_proj_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_emp_proj_create"
                android:clickable="false"
                android:text="adm_emp_proj_view"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_emp_wo_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_emp_proj_view"
                android:clickable="false"
                android:text="adm_wo_create"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_emp_wo_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_emp_wo_create"
                android:clickable="false"
                android:text="adm_wo_view"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_emp_wo_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_emp_wo_view"
                android:clickable="false"
                android:text="adm_wo_edit"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_emp_wo_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_emp_wo_edit"
                android:clickable="false"
                android:text="adm_wo_delete"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_auth_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_emp_wo_delete"
                android:clickable="false"
                android:text="auth_pass"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_auth_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_auth_pass"
                android:clickable="false"
                android:text="auth_pin"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_hours_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_auth_pin"
                android:clickable="false"
                android:text="hours_add"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_hours_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_hours_add"
                android:clickable="false"
                android:text="hours_edit"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_hours_member_QRScan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_hours_edit"
                android:clickable="false"
                android:text="hours_member_QRscan"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_wo_show_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_hours_member_QRScan"
                android:clickable="false"
                android:text="wo_show_all"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/about_adm_wo_sort_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_adm_wo_show_all"
                android:clickable="false"
                android:text="wo_sort_distance"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="italic" />
        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    </RelativeLayout>
</ScrollView>