<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Others.QRResourcesDisplay">

    <ImageView
        android:id="@+id/qr_resources_display_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/qr_resources_display_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_resources_display_imageView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="@string/scanned_resource_list"
        android:textColor="@color/colorPrimary" />

    <ListView
        android:id="@+id/qrScanDescListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_resources_display_textView"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>