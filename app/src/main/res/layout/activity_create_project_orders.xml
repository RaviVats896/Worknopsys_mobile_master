<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_create_project_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.ravivats.worknopsysmobile.CreateProjectOrders">

            <TextView
                android:id="@+id/cp_orders_desc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:text="@string/description"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cp_orders_activity_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_desc_label"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20dp"
                android:ems="7"
                android:hint="Activity"
                android:inputType="text"
                android:textColorHint="@color/colorAccent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cp_orders_activity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_desc_label"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Activity" />

            <EditText
                android:id="@+id/cp_orders_short_txt_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_activity_label"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20dp"
                android:ems="7"
                android:hint="Short Text"
                android:inputType="textShortMessage"
                android:textColorHint="@color/colorAccent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cp_orders_short_txt_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_activity_label"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Short Text" />

            <EditText
                android:id="@+id/cp_orders_activity_status_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_short_txt_label"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20dp"
                android:ems="7"
                android:hint="Activity Status"
                android:inputType="text"
                android:textColorHint="@color/colorAccent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cp_orders_activity_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_short_txt_label"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Activity Status" />

            <EditText
                android:id="@+id/cp_orders_long_txt_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_activity_status_label"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20dp"
                android:ems="7"
                android:hint="Long Text"
                android:inputType="textLongMessage"
                android:textColorHint="@color/colorAccent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cp_orders_long_txt_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_activity_status_label"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Long Text" />

            <TextView
                android:id="@+id/cp_orders_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_long_txt_label"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Time :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cp_orders_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_time_label"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Date" />

            <EditText
                android:id="@+id/cp_orders_date_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_time_label"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20dp"
                android:ems="7"
                android:hint="Pick Date"
                android:inputType="datetime"
                android:textColorHint="@color/colorAccent"
                android:textSize="16dp"
                android:clickable="true"
                />


            <TextView
                android:id="@+id/cp_orders_time1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_date_label"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Time" />

            <EditText
                android:id="@+id/cp_orders_time1_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_date_label"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20dp"
                android:ems="7"
                android:hint="Pick Time"
                android:inputType="time"
                android:textColorHint="@color/colorAccent"
                android:textSize="16dp"
                android:clickable="true"/>

            <Button
                android:id="@+id/cp_orders_nxt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cp_orders_time1_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/create_project" />
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main2"
        app:menu="@menu/activity_main2_drawer" />

</android.support.v4.widget.DrawerLayout>

